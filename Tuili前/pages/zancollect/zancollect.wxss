.content-container .box-item {
	/*width: 90%;*/
	display: flex;
	flex-direction: column;
	/*margin-top: 10rpx*/
}

.content-container .header-item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	margin-bottom: 20rpx;
}

.content-container .header-item .header-left {
	display: flex;
	flex-direction: row;
	align-items: center
}

.content-container .header-item .header-left image {
	margin-left: 10rpx;
	border-radius: 50%;
}
.content-container .header-item .header-left text {
	font-size: 35rpx;
	text-align: center;
	margin-left: 30rpx;
	opacity: 0.5
}

.content-container .header-item .more {
	font-size: 50rpx;
	margin-right: 30rpx;
	text-align: center;
	vertical-align: middle;
}

.content-container .content-item {
	/*height: 300rpx;*/
	display: flex;
	flex-direction: row;
	/*flex-wrap: wrap;*/
	/*text-overflow: ellipsis;*/
	/*overflow: hidden;*/
	/*flex-wrap: wrap;*/
	/*overflow: hidden;*/
	font-size: 27rpx;
	/*opacity: 0.9;*/
	/*align-items: center;*/ 
	justify-content: space-around;
}

.content-container .content-item image {
	float: left;
	width:35%;
	height: 172rpx;
	border-radius: 10rpx
}

.content-container .content-item text {
	opacity: 0.8;
	margin-left: 30rpx;
	width: 65%;
	height: 170rpx;
    /*word-break: break-all;*/
    white-space: wrap;
    text-overflow: ellipsis;
    overflow: hidden; 
}

.content-container .info-item {
	display: flex;
	flex-direction: column;
}

.content-container .info-item .answer { 
	margin-top: 10rpx;
	font-size: 27rpx;
	color: #8B8B83;
}	

.content-container .info-item .others {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
	display: flex;
	flex-direction: row;
    justify-content: flex-end;
}

.content-container .info-item .others text{
	margin-top: 10rpx;
	margin-right: 30rpx;

	font-size: 25rpx;
	opacity: 0.4
}

.content-container .info-item .others view {
	margin-left: 40rpx;
}

