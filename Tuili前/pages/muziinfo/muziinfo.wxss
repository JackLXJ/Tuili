.content-container {
    display: flex;
    flex-direction: column;
}

text {
    word-wrap: break-word;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    margin-bottom: 5rpx; 
}

.inline {
    width: 95%;
    height: 5rpx;
    background-color: #000000;
    /* text-align: center */
    display: flex;
    justify-content: center;
    line-height: 7rpx;
    margin: 0 auto;
    margin-top: 10rpx;
    margin-bottom: 10rpx
}


.image-item {
    display: flex;
    justify-content: center;
}

.image {
    width: 400rpx;
    height: 300rpx
}


.zhifubao-weixin {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.zhifubao-weixin .desc {
    display: flex;
    flex-direction: row;
}

.zhifubao-weixin .desc text {
    width: 50%;
    text-align: center;
    font-size: 30rpx
}

.zhifubao-weixin .image-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around
}

.zhifubao-weixin .image-item image {
    width: 300rpx;
    height: 300rpx
}

.history-table-wrap{
  position: absolute;
  width: 100%;
  height: 700rpx;
  left: 50%;
  margin-left: -370rpx;
  top: 2000rpx;
  overflow-y: scroll;
  overflow-x: hidden;
}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  /* border-right:0; */
  border-bottom: 0;
  width: 100%;
  /* margin-left: 1%; */
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  /* padding: 10px; */
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}
.th1,.th2,.td1,.td2{
  width: 50%;
}
.th{
  font-weight: 800;
  background-color: #ADD8E6;
  font-size: 25rpx;
  color: #000000;
}
.td{
  font-size: 30rpx;
  color: #000000;
}

.tr view {
    width: 25%
}